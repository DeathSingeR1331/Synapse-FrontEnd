FROM node:18-alpine

WORKDIR /app

# Copy package.json and lock file
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all source code
COPY . .

# Expose dev server port (usually 3000 or 5173 or 4200 etc.)
EXPOSE 3000

# Run the frontend dev server with hot reload
CMD ["npm", "run", "start"]
